@model WebProgramlamaOdev.Models.Cart
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">

            <h2>Alışveriş Sepeti</h2>
            <hr />

            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Quantity</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Sub Total</th>
                        <td></td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.CartLines)
                    {
                        <tr>
                            <td>
                                <img src="/Upload/@item.Product.Image" width="50" />
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.Product.Price
                            </td>
                            <td>
                                @((item.Product.Price * item.Quantity).ToString("c"))
                            </td>
                            <td>
                                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                {
                                    @Html.Hidden("Id", item.Product.Id)
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash-o" ></i>
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="5"></td>
                        <td>
                            @Model.Total().ToString("c")
                        </td>
                    </tr>
                    </tfoot>
                </table>
                <div class="text-center">
                  
                    <a href="/Home/List" class="btn btn-primary">
                        <i class="fa fa-angle-double-left"></i>
                        Alışveriş Devam Et
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Alışverişi Tamamla

                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle " style="font-size: 20px;"></i>
                    Alışveriş Sepetinizide Ürün Bulunmamaktadır.
                </div>
            }

        </div>
    </div>
</div>
