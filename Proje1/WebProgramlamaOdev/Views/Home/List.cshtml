@using WebProgramlamaOdev.Models;
@model List<WebProgramlamaOdev.Controllers.ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container pb-5">
    <div class="row">
        <div class="col-md-3">
           @Html.Action("GetCategories","Home")
        </div>

        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                @WebProgramlamaOdev.Resources.HomeTexts.V_H_L_Bulunamadi
            </div>
            }
            else
            {
        <div class="alert alert-secondary" role="alert">

            <i class="fas fa-check-square"></i>
            <strong>@Model.Count() @WebProgramlamaOdev.Resources.HomeTexts.V_H_L_adet</strong>  @WebProgramlamaOdev.Resources.HomeTexts.V_H_L_urun_bulundu
        </div>
            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>
