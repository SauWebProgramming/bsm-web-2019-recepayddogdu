@using WebProgramlamaOdev.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}
<div id="product-details" class="container pb-5">

    <div class="row">

        <div class="col-md-6">
            <img src="/Upload/@Model.Image" class="img-fluid rounded">
        </div>

        <div class="col-md-6">
            <!--Urun bilgileri -->
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div> <!-- Urun basligi -->

            <div class="row">
                <div class="col-md-12">


                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-primary">@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_Stokta</span>
                    }
                    else
                    { 
                <span class="badge badge-danger">@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_StoktaYok</span>
                    }



                    <span class="product-number">#123456</span>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    <i class="fas fa-star" style="font-size: 16px;"></i>
                    <i class="fas fa-star" style="font-size: 16px;"></i>
                    <i class="fas fa-star" style="font-size: 16px;"></i>
                    <i class="fas fa-star" style="font-size: 16px;"></i>
                    <i class="fas fa-star-half-alt" style="font-size: 16px;"></i>
                    <span class="badge badge-success">53</span>
                </div>

                <div id="write-review" class="col-md-4">
                    <a href="#">
                        @WebProgramlamaOdev.Resources.HomeTexts.V_H_D_DegerlendirmeYazin
                    </a>

                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <h4 id="product-prices">@Model.Price ₺</h4>

                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-12">
                    
                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        @Html.HiddenFor(i=>i.Id)
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-cart-plus"></i>
                        @WebProgramlamaOdev.Resources.HomeTexts.V_H_D_SepeteEkle
                    </button>
                    }
                </div>
            </div>
        </div>
        <!--Urun bilgileri -->


    </div>
    <!--Urun resmi -->

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-selected="true">@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_Aciklama</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_OdemeMetodlari</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-comment-tab" data-toggle="pill" href="#pills-comment" role="tab" aria-controls="pills-comment" aria-selected="false">@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_Inceleme</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                        <p>@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_p_Aciklama</p>
                    </div>
                    <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
                        <p>@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_p_OdemeMetod</p>
                    </div>
                    <div class="tab-pane fade" id="pills-comment" role="tabpanel" aria-labelledby="pills-comment-tab">
                        <p>@WebProgramlamaOdev.Resources.HomeTexts.V_H_D_p_Inceleme</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

