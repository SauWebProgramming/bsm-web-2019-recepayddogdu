@using WebProgramlamaOdev.Models;
@model List<WebProgramlamaOdev.Controllers.ProductModel>
<style type="text/css">
    .card-text {
        font-size:12px;
      }

    .card-title {
        font-size: 16px;
        font-weight: 400;
        color: #484848;
        line-height: 1.35em;
        height: 34px;
    }
</style>


<div class="row">



    @foreach (var urun in Model)
    {

        <div class="col-md-4">
            <div class="card">
                <img src="/Upload/@urun.Image" class="card-img-top" alt="@urun.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h4>
                    <p class="card-text">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">@urun.Price</small>
                </div>
            </div>
        </div>
    }

</div>