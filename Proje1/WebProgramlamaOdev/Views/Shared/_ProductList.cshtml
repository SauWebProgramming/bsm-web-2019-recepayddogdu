@using WebProgramlamaOdev.Models;
@model List<WebProgramlamaOdev.Controllers.ProductModel>
<style type="text/css">
   

    .card-title {
        font-size: 16px;
        font-weight: 400;
        color: #484848;
        line-height: 1.35em;
        height: 34px;
    }

    .product-price {
        color: #414141;
        font-weight: 700;
        font-size: 17px;
    }

    .description {
        font-size:12px;
        height: 40px;
    }

</style>



<div class="row">



    @foreach (var urun in Model)
    {

        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/Upload/@urun.Image" class="card-img-top" alt="@urun.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h4>
                    <p class="card-text pt-2 description">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        <i class="fas fa-lira-sign" ></i>
                        @urun.Price
                    </small>
                </div>
            </div>
        </div>
    }

</div>