@model IEnumerable<WebProgramlamaOdev.Models.AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">
    <h2>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_h2Baslik</h2>
    <hr/>
    
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_id</th>
            <th>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_SiparisNo</th>
            <th>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_SiparisTarihi</th>
            <th>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_SiparisDurumu</th>
            <th>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_Tutar</th>
            <th>@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_UrunStok</th>
            <td></td>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.OrderNumber</td>
                <td>@item.OrderDate</td>
                <td>@item.OrderState</td>
                <td>@item.Count</td>
                <td>@item.Total</td>
                <td>
                    @Html.ActionLink(@WebProgramlamaOdev.Resources.HomeTexts.V_O_I_Detaylar,"Details",new{id=@item.Id},new{@class="btn btn-primary btn-sm"})
                </td>
            </tr>
        }
        </tbody>
    </table>


</div>

